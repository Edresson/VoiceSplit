{
    "dataset":{
        "train_dir":"",
        "test_dir":"",
        "format":{ // format for glob search
            "emb": "*-emb.pt",
            "mixed":"*-target.pt",
            "target":"*-mixed.wav"
        }

    },
    "loss":{
        "power": 0.30,
        "complex_loss_ratio":0.113 // \lambda  best value in paper https://arxiv.org/pdf/1811.07030.pdf
    },
    "train_config": {
        "epochs": 1000,
        "learning_rate": 1e-2,
        "optimizer":"adam",
        "batch_size": 12,
        "seed": 1234,
        "num_workers": 14,
        "logs_path": "checkpoints/",
        "reinit_layers": null,
        "summary_interval": 2,
        "checkpoint_interval": 800
    },
    "test_config": {
        "batch_size": 1,
        "num_workers": 1
    },
    "model":{
        "lstm_dim": 400,
        "fc1_dim:": 600,
        "fc2_dim:": 513,  // = audio.num_freq
        "emb_dim": 80 // 256 for GE2E encoder and 80 for Speech2Phone
    },  
    "audio": {
        // its useful for disable mel spec extraction, and use linear spectrograms
        "mel_spec": false, // if you use this = false, you need use the fuction AudioProcessor.mag_to_mel(mag) for use Waveglow as vocoder
        "segment_length": 16000,
        "sampling_rate": 22050,
        "filter_length": 1024,
        "num_freq": 513, // = filter_length// 2 + 1
        "n_mel_channels":80,
        "hop_length": 256,
        "win_length": 1024,
        "mel_fmin": 0.0,
        "mel_fmax": 8000.0,
        // Griffin-Lim
        "power": 1.5,           // value to sharpen wav signals after GL algorithm.
        "griffin_lim_iters": 60// #griffin-lim iterations. 30-60 is a good range. Larger the value, slower the generation.
    }
}